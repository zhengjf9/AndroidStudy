<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <android.support.constraint.Guideline
      android:id="@+id/guideline1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.333333"
      />
   <android.support.constraint.Guideline
       android:id="@+id/guideline2"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       app:layout_constraintGuide_percent="0.25"
       />
   <android.support.constraint.Guideline
       android:id="@+id/guideline3"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       app:layout_constraintGuide_percent="0.75"
       />
 <android.support.constraint.Guideline
     android:id="@+id/guideline4"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="horizontal"
     app:layout_constraintGuide_percent="0.46"
     />
    <ImageView
        android:id="@+id/leftBlank"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guideline1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/photo"
        />
    <ImageView
        android:id="@+id/rightBlank"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guideline1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/photo"
        />
   <ImageView
       android:id="@+id/photo"
       android:layout_width="wrap_content"
       android:layout_height="0dp"
       android:adjustViewBounds="true"
       android:src="@mipmap/ferrero"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="@+id/guideline1"
       app:layout_constraintLeft_toLeftOf="@+id/guideline2"
       app:layout_constraintRight_toRightOf="@+id/guideline3"
       />
   <TextView
       android:id="@+id/shopName"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Enchated Forest"
       android:textColor="@color/black"
       android:textSize="20sp"
       android:layout_marginLeft="20dp"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintBottom_toBottomOf="@+id/guideline1"
       android:layout_marginBottom="20dp"
       />
    <ImageView
        android:id="@+id/star"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/empty_star"
        app:layout_constraintBottom_toBottomOf="@+id/shopName"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        />
     <TextView
         android:id="@+id/shopPrice"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="￥5.00"
         android:textColor="#D5000000"
         android:layout_marginLeft="20dp"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintTop_toBottomOf="@id/leftBlank"
         android:layout_marginTop="10dp"
         />
    <TextView
     android:id="@+id/shopInfo"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="作者 Johanna Basford"
     android:textColor="#8A000000"
     android:layout_marginLeft="20dp"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/shopPrice"
     android:layout_marginTop="10dp"
     />
    <ImageView
     android:id="@+id/shopBus"
     android:layout_width="30dp"
     android:layout_height="30dp"
     android:foreground="@mipmap/shoplist"
     app:layout_constraintTop_toBottomOf="@+id/guideline1"
     app:layout_constraintRight_toRightOf="parent"
     android:layout_marginRight="20dp"
     android:layout_marginTop="20dp"
     />
    <View
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
        android:layout_width="1dp"
        android:background="#1E000000"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toLeftOf="@+id/shopBus"
        app:layout_constraintBottom_toBottomOf="@+id/shopBus"
        android:layout_marginRight="20dp"
        />
    <View
     android:layout_width="fill_parent"
     app:layout_constraintTop_toBottomOf="@+id/guideline4"
     android:layout_height="1dp"
     android:background="#1E000000"
     android:orientation="horizontal"
     android:layout_marginLeft="10dp"
     android:layout_marginRight="10dp"
     />
    <TextView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更多产品信息"
        android:textColor="#D5000000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/guideline4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />
    <View
     android:id="@+id/moreLine"
     android:layout_width="fill_parent"
     app:layout_constraintTop_toBottomOf="@+id/more"
     android:layout_height="20dp"
     android:background="#1E000000"
     android:orientation="horizontal"
        android:layout_marginTop="10dp"
     />
    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:foreground="@mipmap/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        />
    <ListView
        android:id="@+id/moreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/moreLine"
        >

    </ListView>


</android.support.constraint.ConstraintLayout>

